{{# if products}}
<div class="row">
	<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
		<ul class="list-group">
			{{# each products }}
			<li class="list-group-item">
				<span class="badge">{{ this.qty}}</span>
				<strong>{{ this.item.title}}</strong>
				<span class="label label-success">${{this.price}}</span>
				<div class="btn btn-group">
					<button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
					<ul class="dropdown-menu">
						<li class="dropdown-item"><a href="#">Reduce by 1</a> </li>
						<li class="dropdown-item"><a href="#">Remove All</a> </li>

					</ul>
				</div>
			</li>
			{{/each}}
		</ul>
	</div>
</div>
<div class="row">
	<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
		<strong>Total:${{ this.totalPrice}}</strong>
	</div>
</div>
<hr>
<div class="row">
	<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
		<button type="button" class="btn btn-success"><a href="/checkout" >Checkout</a></button>
	</div>
</div>

 {{else}}
<div class="row">
	<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
		<strong>No Item in cart</strong>
	</div>
</div>
{{/if}}
